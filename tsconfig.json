{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "allowJs": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": ["esnext"],
        "types": [
            "node",
            "jest"
        ],
        "declaration": true,
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
    },
    "exclude": [
        "dist",
        "node_modules",
        "src/**/*.spec.ts"
    ],
    "include": [
        "src"
    ]
}
