{
    "name": "football-simulator",
    "version": "0.0.1",
    "description": "Javascript Football Simulator",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "build:check": "tsc --noEmit",
        "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
        "lint": "tslint -p tsconfig.json",
        "test": "jest --config jestconfig.json",
        "prepare": "npm run build",
        "prepublishOnly": "npm test && npm run lint",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/toystars/football-simulator.git"
    },
    "keywords": [
        "Football Simulator",
        "Football Simulation",
        "Football",
        "Simulator",
        "Simulation",
        "Sports"
    ],
    "author": "Mustapha Babatunde Oluwaleke",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/toystars/football-simulator/issues"
    },
    "homepage": "https://github.com/toystars/football-simulator#readme",
    "publishConfig": {
        "access": "public"
    },
    "devDependencies": {
        "@types/jest": "^24.0.23",
        "@types/node": "^12.12.8",
        "jest": "^24.9.0",
        "prettier": "^1.19.1",
        "ts-jest": "^24.1.0",
        "ts-node": "^8.5.2",
        "tslint": "^5.20.1",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^3.7.2"
    },
    "files": [
        "/dist/core"
    ]
}
